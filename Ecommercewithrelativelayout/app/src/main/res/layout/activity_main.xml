<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <RelativeLayout
       android:id="@+id/relative1"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@color/green"
      >

      <ImageView
          android:id="@+id/arrow"
          android:layout_width="40dp"
          android:layout_height="wrap_content"
          android:src="@drawable/baseline_arrow_back_ios_24"
          android:layout_marginTop="13dp"
          android:layout_marginLeft="20dp"
         />

      <TextView
          android:id="@+id/Eco"
          android:layout_width="160dp"
          android:layout_height="wrap_content"
          android:text="Ecommerce"
          android:layout_toRightOf="@+id/arrow"
          android:textColor="@color/white"
          android:textStyle="normal"
          android:textSize="20dp"
          android:layout_marginTop="10dp"
          />

      <ImageView
          android:id="@+id/vert"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:src="@drawable/baseline_more_vert_24"
          android:layout_marginTop="13dp"
          android:layout_marginLeft="90dp"
          android:layout_toRightOf="@+id/Eco"
          />
   </RelativeLayout>

   <RelativeLayout
       android:id="@+id/relative2"
       android:layout_width="match_parent"
       android:layout_height="700dp"
       android:background="@color/grey"
       android:layout_below="@+id/relative1"
       >
      <EditText
          android:id="@+id/name"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:text="Full Name"
          android:padding="9dp"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="30dp"
          android:background="@drawable/button"
          android:textColor="@color/grey"
         />

      <EditText
          android:id="@+id/num"
          android:layout_width="215dp"
          android:layout_height="40dp"
          android:text="Card Number"
          android:padding="9dp"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="15dp"
          android:background="@drawable/button"
          android:textColor="@color/grey"
          android:layout_below="@+id/name"
          />
      <EditText
          android:id="@+id/cv"
          android:layout_width="90dp"
          android:layout_height="40dp"
          android:text="CVV"
          android:padding="9dp"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="15dp"
          android:background="@drawable/button"
          android:textColor="@color/grey"
          android:layout_below="@+id/name"
          android:layout_toRightOf="@+id/num"
          />

      <EditText
          android:id="@+id/Expire"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:text="Expiration Date"
          android:padding="9dp"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="15dp"
          android:background="@drawable/button"
          android:textColor="@color/grey"
          android:layout_below="@+id/num"
          />

      <EditText
          android:id="@+id/Address1"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:text="Address Line 1"
          android:padding="9dp"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="15dp"
          android:background="@drawable/button"
          android:textColor="@color/grey"
          android:layout_below="@+id/Expire"
          />

      <EditText
          android:id="@+id/Address2"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:text="Expiration Date"
          android:padding="9dp"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="15dp"
          android:background="@drawable/button"
          android:textColor="@color/grey"
          android:layout_below="@+id/Address1"
          />

      <EditText
          android:id="@+id/City"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:text="Expiration Date"
          android:padding="9dp"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="15dp"
          android:background="@drawable/button"
          android:textColor="@color/grey"
          android:layout_below="@+id/Address2"
          />
      <Spinner
          android:id="@+id/spinner"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:autofillHints="state"
          android:padding="9dp"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="15dp"
          android:background="@drawable/button"
          android:textColor="@color/grey"
          android:layout_below="@+id/City"
          />



      <EditText
          android:id="@+id/country"
          android:layout_width="215dp"
          android:layout_height="40dp"
          android:text="Country"
          android:padding="9dp"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="15dp"
          android:background="@drawable/button"
          android:textColor="@color/grey"
          android:layout_below="@+id/spinner"
          />
      <EditText
          android:id="@+id/code"
          android:layout_width="90dp"
          android:layout_height="40dp"
          android:text="Zip code"
          android:padding="9dp"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="15dp"
          android:background="@drawable/button"
          android:textColor="@color/grey"
          android:layout_below="@+id/spinner"
          android:layout_toRightOf="@+id/country"


          />

      <EditText
          android:id="@+id/comment"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:text="Comment"
          android:padding="9dp"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="15dp"
          android:background="@drawable/button"
          android:textColor="@color/grey"
          android:layout_below="@+id/country"
          />

      <Button
          android:id="@+id/button"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="SUBMIT"
          android:backgroundTint="@color/green"
          android:textSize="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginHorizontal="20dp"
          android:layout_below="@+id/comment"
         />








   </RelativeLayout>



</RelativeLayout>