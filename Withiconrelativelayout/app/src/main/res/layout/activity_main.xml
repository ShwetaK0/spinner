<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <RelativeLayout
      android:id="@+id/deltaRelative1"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@color/pink"
      >

      <ImageView
          android:id="@+id/arrow"
          android:layout_width="60dp"
          android:layout_height="30dp"
          android:src="@drawable/baseline_arrow_back_24"
          android:layout_marginTop="10dp"
          />
      <ImageView
          android:id="@+id/check"
          android:layout_width="60dp"
          android:layout_height="30dp"
          android:src="@drawable/baseline_check_24"
          android:layout_marginTop="10dp"
          android:layout_toRightOf="@id/arrow"
          android:layout_marginLeft="250dp"
          />


  </RelativeLayout>

    <ImageView
        android:id="@+id/pic"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/baseline_person_24"
        android:layout_below="@id/deltaRelative1"
        android:background="@color/grey"
        />

    <ImageView
        android:id="@+id/person"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/pic"
        android:layout_marginTop="40dp"
        android:src="@drawable/baseline_person_24dark"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:id="@+id/call"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/person"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_call_24"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:id="@+id/mail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/call"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_email_24"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:id="@+id/add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/mail"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_location_on_24"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:id="@+id/company"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/add"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_business_24"
        android:layout_marginLeft="20dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic"
        android:hint="Name"
        android:layout_marginHorizontal="30dp"
        app:hintTextColor="@color/grey"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/person"
        >


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pi"
            android:textColor="@color/pink"
            />

    </com.google.android.material.textfield.TextInputLayout>







</RelativeLayout>